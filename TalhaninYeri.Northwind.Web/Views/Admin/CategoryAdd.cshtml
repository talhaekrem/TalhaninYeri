@model CategoryModel
@{
    ViewData["Title"] = "Admin - Kategori Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container my-5">
    <h2>Kategori Ekle</h2>
    <form asp-controller="Admin" asp-action="CategoryAdd" method="post">
        <div class="form-group">
            <label asp-for="Category.CategoryName">Kategori Adı</label>
            <input asp-for="Category.CategoryName" class="form-control" type="text" placeholder="Kategori Adı" />
            <span asp-validation-for="Category.CategoryName"></span>
        </div>
        <input type="submit" value="Ekle" class="btn btn-success" />
    </form>
</div>

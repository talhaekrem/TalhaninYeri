@model FooterViewModel

<footer class="mainBgColor open-sans">
    <div class="container">
        <div class="row">

            <div class="col-12 col-lg-4">
                <div class="footerCenter">
                    <h3 class="mb-4"><a asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a></h3>
                    <h3 class="mb-4"><a asp-area="" asp-controller="Product" asp-action="Index">Ürünler</a></h3>
                    <h3 class="mb-4"><a asp-area="" asp-controller="Contact" asp-action="Index">İletişim</a></h3>
                    <hr />
                    <div class="d-flex">
                        <div><img width="125" height="70" src="~/Images/logo.png"/></div>
                        <div class="pl-3"><p class="text-muted">@Model.SiteSetting.Description</p></div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <h3>Kategoriler</h3>
                <ul class="list-unstyled">
                    @foreach (var item in Model.Categories)
                    {
                        <li><a class="defaultLinkColor" href="/Product/Index?category=@item.CategoryId">@item.CategoryName</a></li>
                    }
                </ul>
            </div>

            <div class="col-12 col-lg-4">
                <h3>İletişim</h3>
                <ul class="list-unstyled">
                    <li><i class="fa fa-phone"></i> <a class="defaultLinkColor" href="tel:@Model.SiteSetting.Phone">@Model.SiteSetting.Phone</a></li>
                    <li><i class="fa fa-map-marker"></i> @Model.SiteSetting.Address</li>
                    <li><i class="fa fa-envelope"></i> <a class="defaultLinkColor" href="mailto:@Model.SiteSetting.Email">@Model.SiteSetting.Email</a></li>
                </ul>
                <h5>Sosyal Medya Hesaplarımız</h5>
                <p class="footerSocialMedia">
                    <a class="pr-4" href="@Model.SiteSetting.Instagram"><i class="fa fa-instagram"></i></a>
                    <a class="pr-4" href="@Model.SiteSetting.Twitter"><i class="fa fa-twitter"></i></a>
                    <a href="@Model.SiteSetting.Youtube"><i class="fa fa-youtube-play"></i></a>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <hr /><br />
                      <b>Talha'nın Yeri - @DateTime.Now.Year</b>
                <br />
                <small class="text-muted text-center">Bu site, yaz stajı döneminde ödev amacıyla yapılmış olup hiçbir ticari amaç gütmemektedir. Sitedeki tüm görseller internetten alınmıştır.</small>
            </div>
        </div>
    </div>
</footer>
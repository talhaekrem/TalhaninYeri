@model CartSummaryViewModel
<div class="dropdown">
    <a class="btn dropdown-toggle" role="button" id="CartDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-shopping-cart"></i> Sepet <span class="badge badge-info badge-pill bg-secondary-color">@Model.Cart.TotalAmount</span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="CartDropdown">
        @foreach (var item in Model.Cart.CartLines)
        {

            <a class="dropdown-item">
                <img class="basketImg" src="~/img/product-thumb/@item.Product.ImagePath" onerror="this.src='/Images/resim-yok.jpg'" />
                @item.Product.ProductName <span class="badge badge-info badge-pill bg-secondary-color">@item.Quantity</span> x <small class="price">@item.Product.UnitPrice</small>
            </a>
        }
        <div class="dropdown-divider"></div>
        @if (Model.Cart.SubTotal == 0)
        {
            <a class="dropdown-item">Toplam: <span class="text-info font-weight-bold text-secondary-color">0,00</span> TL</a>

        }
        else
        {
            <a class="dropdown-item">Toplam: <span class="price text-info font-weight-bold text-secondary-color">@Model.Cart.SubTotal</span> TL</a>

        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item text-info text-secondary-color" asp-area="" asp-controller="Cart" asp-action="List">Sepete Git</a>
    </div>
</div>